---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
<title>{{ site.name }}</title>
<link href="http://{{ site.domain }}/atom.xml" rel="self"/>
<link href="http://{{ site.domain }}"/>
<updated>{{ site.time | date_to_xmlschema }}</updated>
<id>http://{{ site.domain }}/</id>
<author>
    <email>{{ site.email }}</email>
</author>

{% for post in site.posts %}
<entry>
    <title type="html">
        {{ post.title | replace: 'Á', '&Aacute;' | replace: 'É','&Eacute;' | replace: 'Í', '&Iacute;' | replace: 'Ó','&Oacute;'  | replace: 'Ú','&Uacute;' | replace: 'á', '&aacute;' | replace: 'é','&eacute;' | replace: 'í', '&iacute;' | replace: 'ó','&oacute;'  | replace: 'ú','&uacute;' | xml_scape}}
        ({{post.date | date: "%d-%m-%Y"}})
    </title>
    <link href="http://{{ site.domain }}{{ post.url }}"/>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <id>http://{{ site.domain }}{{ post.id }}</id>
    <content type="html">{{ post.content | xml_escape }}</content>
</entry>
{% endfor %}
</feed>
